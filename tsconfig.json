{
  "compilerOptions": {
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "outDir": "dist",
    "lib": [ "esnext" ],
    "types": [ "node" ],
    "baseUrl": "./",
    "paths": {
        "@/*": [
            "./src/*"
        ],
        "@server/*": [
            "./src/server/*"
        ],
        "@types/*": [
            "./src/types/*"
        ],
        "@useCases/*": [
            "./src/useCases/*"
        ],
        "@database/*": [
            "./src/database/*"
        ],
        "@middleware/*": [
            "./src/middlewares/*"
        ],
    },
  },
  "ts-node": {
    "esm": true
  },
  "exclude": [ "node_modules" ],
  "include": [
    "src/**/*.ts",
    "bin/*.ts"
  ]
}